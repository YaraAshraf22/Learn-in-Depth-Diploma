#include "stdio.h"

/*Calculate sum of natural numbers*/

void main ()
{
	int n=0, sum=0;
	printf("Enter an integer: ");
	fflush(stdin); fflush(stdout);
	scanf("%d", &n);
	for (i=n;i>=1;i--)
	{
		sum+=i;
	}

	printf("Sum = %d", sum);
}
