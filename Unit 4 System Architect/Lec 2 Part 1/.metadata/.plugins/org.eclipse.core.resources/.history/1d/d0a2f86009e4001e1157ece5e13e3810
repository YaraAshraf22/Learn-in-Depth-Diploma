#include "DC.h"

//Variables of the block
static int DC_speed = 0 ;

//State pointer to function
void (*DC_state)();

void DC_init ()
{
	//init DC Driver
	printf("DC_init \n");
}

STATE_define(DC_waiting)
{
	//Set state
	DC_state_ID = DC_waiting;

	//State Action
	//DCll DC_Motor
	DC_speed = 0;

	//Event Check
	//Get Random distance
	DC_distance = US_Get_Distance_Random(45,55,1);
	(DC_distance > DC_threshold)? (DC_state = STATE(DC_driving)) : (DC_state = STATE(DC_waiting));
	printf("DC_waiting: distance = %d, speed = %d \n", DC_distance, DC_speed);

}
STATE_define(DC_driving)
{
	//Set state
	DC_state_ID = DC_driving;

	//State Action
	//DCll DC_Motor
	DC_speed = 30;

	//Event Check
	//Get Random distance
	DC_distance = US_Get_Distance_Random(45,55,1);
	(DC_distance > DC_threshold)? (DC_state = STATE(DC_driving)) : (DC_state = STATE(DC_waiting));
	printf("DC_driving: distance = %d, speed = %d \n", DC_distance, DC_speed);

}
unsigned int US_Get_Distance_Random (int l, int r, int count)
{
	int i, random_num;
	for (i=0; i<count; i++)
	{
		random_num = (rand() % (r - l + 1 )) + l;
		return random_num;
	}
}
