#include "US.h"

//Variables of the block
static int US_distance = 0;
static int US_threshold = 50;

//State pointer to function
void (*US_state)();

//Random distance Fn
unsigned int US_Get_Distance_Random (int l, int r, int count);

void US_init ()
{
	//init US Driver
	printf("US_init \n");
}
STATE_define(US_busy)
{
	//Set state
	US_state_ID = US_busy;

	//State Action
	//USll DC_Motor
	US_speed = 0;

	//Event Check
	//Get Random distance
	US_distance = US_Get_Distance_Random(45,55,1);
	(US_distance > US_threshold)? (US_state = STATE(US_driving)) : (US_state = STATE(US_waiting));
	printf("US_waiting: distance = %d, speed = %d \n", US_distance, US_speed);

}
unsigned int US_Get_Distance_Random (int l, int r, int count)
{
	int i, random_num;
	for (i=0; i<count; i++)
	{
		random_num = (rand() % (r - l + 1 )) + l;
		return random_num;
	}
}
