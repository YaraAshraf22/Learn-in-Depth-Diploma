#define FOUR	0x4C
#define FIVE	0x12
#define SIX		0x02
#define SEVEN	0x19
#define EIGHT	0x00
#define NINE	0x10

void clock_init()
{
	//Enable RCC CLK to GPIOA, bit2
	RCC_GPIOA_CLK_EN();
	//Enable RCC CLK to GPIOB, bit3
	RCC_GPIOB_CLK_EN();
}
